  <!--
    In JATS disp-formula is lacking of a defined structure.

    <define name="disp-formula-model">
      <zeroOrMore>
        <choice>
          <text/>
          <ref name="disp-formula-elements"/>
        </choice>
      </zeroOrMore>
    </define>

    With JATS4R we will try to introduce a restrictive yet expressive
    schema.

    TODO: add transformation
  -->
  <define name="disp-formula">
    <element name="disp-formula">
      <!-- attributes -->
      <ref name="disp-formula-attlist"/>
      <!-- elements -->
      <optional>
        <ref name="label"/>
      </optional>
      <optional>
        <ref name="abstract"/>
      </optional>
      <optional>
        <ref name="abstract"/>
      </optional>
      <!-- TODO: quantity? -->
      <zeroOrMore>
        <ref name="access.class"/>
      </zeroOrMore>
      <optional>
        <ref name="kwd-group"/>
      </optional>
      <optional>
        <ref name="attrib"/>
      </optional>
      <optional>
        <ref name="permissions"/>
      </optional>
      <choice>
        <ref name="alternatives"/>
        <ref name="code"/>
        <ref name="math.class"/>
        <ref name="graphic"/>
        <ref name="preformat"/>
      </choice>
    </element>
  </define>


  <define name="content-location">
    <choice>
      <group>
        <ref name="fpage"/>
        <optional><ref name="lpage"/></optional>
      </group>
      <ref name="page-range"/>
      <ref name="elocation-id"/>
    </choice>
  </define>

  <!--
    We use a strict definition for element-citation in Texture.

    TODO: - support remaining publication types
          - implement attribute-sensitive sub-typing
  -->
  <define name="element-citation">
    <element name="element-citation">
      <ref name="element-citation-attlist"/>
      <ref name="person-group"/>
      <choice>
        <group>
          <!-- publication-type="journal" -->
          <ref name="year"/>
          <ref name="article-title"/>
          <ref name="source"/>
          <optional><ref name="volume"/></optional>
          <optional>
            <ref name="content-location"/>
          </optional>
          <optional><ref name="issue"/></optional>
          <!-- TODO: how can we support multiple pub-ids, other than doi -->
          <zeroOrMore>
            <ref name="pub-id"/>
          </zeroOrMore>
        </group>
        <group>
          <!-- publication-type="book" -->
          <ref name="chapter-title"/>
          <ref name="source"/>
          <ref name="publisher-loc"/>
          <ref name="publisher-name"/>
          <ref name="year"/>
          <optional>
            <ref name="content-location"/>
          </optional>
          <optional><ref name="issue"/></optional>
          <!-- TODO: how can we support multiple pub-ids, other than doi -->
          <zeroOrMore>
            <ref name="pub-id"/>
          </zeroOrMore>
        </group>
      </choice>
    </element>
  </define>

  <!--
    year, source, publisher-loc, publisher-name, fpage, lpage, issue must be
    plain text only in Texture
  -->
  <define name="year"><element name="year"><text/></element></define>
  <define name="source"><element name="source"><text/></element></define>
  <define name="volume"><element name="volume"><text/></element></define>
  <define name="fpage"><element name="fpage"><text/></element></define>
  <define name="lpage"><element name="lpage"><text/></element></define>
  <define name="issue"><element name="issue"><text/></element></define>
  <define name="issue"><element name="issue"><text/></element></define>
  <define name="pub-id"><element name="pub-id"><text/></element></define>
  <define name="publisher-name"><element name="publisher-name"><text/></element></define>
  <define name="publisher-loc"><element name="publisher-loc"><text/></element></define>
  <define name="elocation-id"><element name="elocation-id"><text/></element></define>


